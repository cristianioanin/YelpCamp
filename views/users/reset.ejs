<% include ../partials/header %>

<div class="row justify-content-center">
  <div class="col-md-6 col-sm-12">
    <form action="/users/reset/<%= token %>?_method=PUT" method="POST">
      <legend class="font-weight-normal text-center">Reset Password</legend>
      <div class="form-group">
        <label for="password">New Password</label>
        <input class="form-control" type="password" name="password" id="password" autofocus>
      </div>
      <div class="form-group">
        <label for="confirm">Confirm Password</label>
        <input class="form-control" type="password" name="confirm" id="confirm" autofocus>
      </div>
      <div class="form-group">
        <button class="btn btn-outline-warning btn-block">Update Password</button>
      </div>
    </form>
  </div>
</div>

<% include ../partials/footer %>