<% include ../partials/header %>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1 class="h3 mb-3 font-weight-normal text-center">Create a new Campground</h1>
  </div>


  <div class="col-md-9 col-sm-12">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <label for="name">Campground's name</label>
        <input class="form-control" type="text" name="name" placeholder="Dolphin Camping" id="name" autofocus required>
      </div>
      <div class="form-group">
        <label for="image">Add a URL to a related image</label>
        <input class="form-control" type="text" name="image" placeholder="http://url-to-campground-image" id="image"
          required>
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" placeholder="Sfântu Gheorghe, România" id="location"
          required>
      </div>
      <label for="price">Cost</label>
      <div class="form-group input-group">
        <input class="form-control" type="number" name="price" placeholder="0.00" min="0.00" step="0.01" max="1000.00"
          id="price" required>
        <div class="input-group-append">
          <span class="input-group-text">$/night</span>
        </div>
      </div>
      <div class="form-group">
        <label for="description">Write a description or just leave your impressions</label>
        <textarea class="form-control review-editor" type="text" name="description" rows="10" id="description"></textarea>
      </div>
      <button class="btn btn-lg btn-outline-success btn-block">Add</button>
    </form>
    <div class="mt-3">
      <a class="text-secondary" href="/campgrounds">Go Back</a>
    </div>

  </div>
</div>

<% include ../partials/footer %>