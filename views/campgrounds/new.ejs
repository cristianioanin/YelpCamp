<% include ../partials/header %>

<div class="row">
  <h1 class="text-center">Create a new Campground</h1>

  <div style="width:60%; margin:30px auto;">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="name" required>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="image URL" required>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="location" placeholder="location" required>
      </div>
      <div class="form-group input-group">
        <input class="form-control" type="number" name="price" placeholder="0.00" min="0.00" step="0.01" max="1000.00"
          required>
        <span class="input-group-addon">$/night</span>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="description" required>
      </div>
      <button class="btn btn-lg btn-primary btn-block">Add</button>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>