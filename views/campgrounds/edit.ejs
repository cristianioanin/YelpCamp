<% include ../partials/header %>

<div class="row">
  <h1 class="text-center">Edit
    <%= campground.name %>
  </h1>

  <div style="width:60%; margin:30px auto;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="name" value="<%= campground.name %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="image" value="<%= campground.image %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="location" value="<%= campground.location %>">
      </div>
      <div class="form-group input-group">
        <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.00" step="0.01"
          max="1000.00">
        <span class="input-group-addon">$/night</span>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="description" value="<%= campground.description %>">
      </div>
      <button class="btn btn-lg btn-primary btn-block">Update</button>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>