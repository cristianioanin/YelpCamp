<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1><span class="glyphicon glyphicon-tent"></span> Welcome to YelpCamp</h1>
    <p>View our hand-picked campgrounds, from all over the world</p>
    <div class="row">
      <div class="col-lg-6 col-md-6">
        <form action="/campgrounds" method="GET" class="form-inline">
          <div class="form-group">
            <input type="text" name="search" placeholder="Campground name..." class="form-control">
            <button class="btn btn-default">Search</button>
          </div>
        </form>
      </div>
      <div class="col-lg-6 col-md-6">
        <a class="btn btn-primary pull-right" href="/campgrounds/new">Add New Campground</a>
      </div>
    </div>
  </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
  <% campgrounds.forEach(campground => { %>
  <div class="col-lg-4 col-md-4 col-sm-6">
    <div class="thumbnail">
      <img src="<%=campground.image %>" alt="Random camping image">
      <div class="caption">
        <h4>
          <%=campground.name %>
        </h4>
      </div>
      <p>
        <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
      </p>
    </div>
  </div>
  <% }); %>
</div>

</div> <!-- /.container-->

<footer id="footer" class="footer">
  <div class="container">
    <div class="footer-text text-center">
      &copy;YelpCamp 2018 Created by <a href="https://github.com/cristianioanin" target="_blank" rel="noopener noreferrer">Cristian
        Ioanin</a> ,
