<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1 class="display-4"><i class="far fa-compass"></i> Welcome to YelpCamp</h1>
    <p class="lead">View our hand-picked campgrounds, from all over the world</p>
    <div class="row">
      <div class="col-md-12">
        <a class="btn btn-outline-success pull-right" href="/campgrounds/new">Add New Campground</a>
      </div>
    </div>
  </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
  <% campgrounds.forEach(campground => { %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    <div class="card">
      <img class="card-img-top" src="<%= campground.image %>" alt="An image of the campground named: <%= campground.name %>">
      <div class="card-body">
        <h5 class="card-title">
          <%= campground.name %>
        </h5>
        <a href="/campgrounds/<%=campground._id %>" class="btn btn-outline-info">More Info</a>
      </div>
    </div>
  </div>
  <% }); %>
</div>

</div> <!-- /.container-->

<footer id="footer" class="footer">
  <div class="container">
    <div class="footer-text text-center">
      &copy;YelpCamp 2018 - Created by <a href="https://github.com/cristianioanin" target="_blank" rel="noopener noreferrer">Cristian
        Ioanin</a> ,
      as the main project of <a href="https://www.udemy.com/the-web-developer-bootcamp/" target="_blank" rel="noopener noreferrer">Web
        Developer Bootcamp</a>, by Colt Steele
    </div>
  </div>
</footer>

