<% include partials/header.ejs %>

<div class="row">
  <div class="auth-form">
    <h1 class="h3 mb-3 font-weight-normal text-center">Please, sign in!</h1>
    <form class="form-signin" action="/login" method="POST">
      <label for="username" class="sr-only">Username</label>
      <input class="form-control" type="text" name="username" placeholder="Username" id="username" autofocus required>
      <label for="password" class="sr-only">Password</label>
      <input class="form-control" type="password" name="password" placeholder="Password" id="password" required>
      <button class="btn btn-lg btn-outline-success btn-block" type="submit">Sign In</button>
    </form>
    <form class="form-signin">
      <a href="/campgrounds" class="text-secondary">Go Back</a> <a class="text-danger float-right" href="/users/reset">I
        forgot my password</a>
    </form>
  </div>
</div>

