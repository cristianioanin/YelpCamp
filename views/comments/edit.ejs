<% include ../partials/header %>

<div class="row justify-content-center">
  <div class="col-md-9 col-sm-12">
    <h1 class="h3 mb-3 font-weight-normal text-center">Edit Comment</h1>
    <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <textarea class="form-control review-editor" type="text" name="comment[text]" rows="10"><%= comment.text %></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-outline-warning btn-block">Update</button>
      </div>
    </form>
    <a class="text-secondary" href="/campgrounds/<%= campgroundId %>">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>