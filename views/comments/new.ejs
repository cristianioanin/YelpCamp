<% include ../partials/header %>

<div class="row justify-content-center">
  <div class="col-md-9 col-sm-12">
    <h1 class="h3 mb-3 font-weight-normal text-center">Add your review to
      <%= campground.name %>
    </h1>
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <textarea class="form-control review-editor" type="text" name="comment[text]" placeholder="Write your review here..."
          rows="10"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-outline-success btn-block">Post Review</button>
      </div>
    </form>
    <div class="mt-3">
      <a class="text-secondary" href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>